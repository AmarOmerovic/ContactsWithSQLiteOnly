<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:height">50dp</item>
        <item name="android:background">@drawable/icons8_add_50</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:contentDescription">@string/addNewItem</item>
        <item name="android:drawableTint">#FFFFFF</item>
